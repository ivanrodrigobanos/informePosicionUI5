<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <MessagePopover
        items="{messageApp>/}"
        initiallyExpanded="true">
        <MessageItem
            type="{messageApp>type}"
            title="{messageApp>message}"
            subtitle="{messageApp>additionalText}"
            description="{messageApp>description}" />
    </MessagePopover>
</core:FragmentDefinition>