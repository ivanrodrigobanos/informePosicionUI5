<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:sft="sap.ui.comp.smarttable"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <sft:SmartTable
        id="SFTQuery"
        entitySet="cfw_query"
        smartFilterId="SFBQuery"
        tableType="Table"
        enableAutoColumnWidth="true"
        useTablePersonalisation="true"
        header="{i18n>accountDataTable.title}"
        showRowCount="true"
        beforeRebindTable="onBeforeRebindTable"
        initialise="onSTInitialised"
        persistencyKey="SmartAccountDataTable"
        editTogglable="true" app:useSmartToggle="true"
    >
        <sft:customToolbar>
            <OverflowToolbar design="Transparent">
                <ToolbarSpacer />
                <Button
                    ariaLabelledBy="{i18n>accountDataTable.refresh}"
                    icon="sap-icon://synchronize"
                    press="handlerRefreshData"
                    visible="{= ${accountBankState>/accountData/accountsData}.length > 0 }" />
                <Button id="btnGoHierarchyBank" text="{i18n>accountDataTable.btnGoHierarchyBank}"
                    tooltip="{i18n>accountDataTable.btnGoHierarchyBank}"
                    press="handlerGoHierarchyBank"
                    type="Transparent"
                    visible="{= ${hierarchyBankState>/hierarchyBankAccount/hierarchyFlat}.length > 0 }"
                />
                <ToolbarSeparator />
                <Button id="btnShowHierarchy" text="{i18n>accountDataTable.hierarchyBtnSelect}"
                    tooltip="{i18n>accountDataTable.hierarchyBtnSelect}" press="showHierarchySelect"
                    type="Transparent"
                />
            </OverflowToolbar>
        </sft:customToolbar>
        <sft:layoutData>
            <FlexItemData growFactor="1" baseSize="0%" />
        </sft:layoutData>
    </sft:SmartTable>
</core:FragmentDefinition>