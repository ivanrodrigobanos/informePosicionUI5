<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:tree="sap.ui.table"
    xmlns:u="sap.ui.unified"
    xmlns:sap.ui.fl="sap.ui.fl"
    xmlns:sap.ui.dt="sap.ui.dt"
    xmlns:vm="sap.ui.fl.variants"
>
    <tree:TreeTable
        id="BankTreeTable"
        rows="{path:'hierarchyBankState>/hierarchyBankAccount/hierarchyTree', parameters: {arrayNames:['accounts']}}"
        columns="{
            path:'hierarchyBankState>/treeFieldCatalog/fieldsCatalog',
            factory: '.factoryHierarchyFieldCatalog' }"
        selectionMode="MultiToggle"
        enableSelectAll="true"
        ariaLabelledBy="title"
        showNoData="true"
        busy="{model: 'queryModel', path:'/loadingHierProcess'}"
        alternateRowColors="true"
        threshold="40000"
        rowsUpdated="handlerTreeTableRowsUpdated"
        sap.ui.fl:flexibility="sap/m/flexibility/EngineFlex"
    >
        <tree:extension>
            <OverflowToolbar
                design="Transparent">
                <Title
                    text=" {i18n>bankAccountTree.title}
                ({= ${hierarchyBankState>/hierarchyBankAccount/hierarchyFlat}.length })" />
                <vm:VariantManagement id="hierarchyBankTreeTable" for="BankTreeTable" />
                <ToolbarSpacer />
                <Button
                    tooltip="{i18n>accountDataTable.refresh}"
                    icon="sap-icon://synchronize"
                    press="handlerRefreshData" />
                <ToolbarSeparator />
                <Button
                    tooltip="{i18n>treeTable.btnNavAccountQuery}"
                    text="{i18n>treeTable.btnNavAccountQuery}"
                    press="navigationAccountQuery" />
                <Button
                    tooltip="{i18n>treeTable.btnChangeHierarchy}"
                    text="{i18n>treeTable.btnChangeHierarchy}"
                    press="handlerChangeBankHier" />
                <ToolbarSeparator />
                <Button
                    tooltip="{i18n>treeTable.btnExpandFirstLevel}"
                    icon="sap-icon://navigation-down-arrow"
                    press="handlerTreeExpandFirstLevel" />
                <Button
                    tooltip="{i18n>treeTable.btnExpandSelection}"
                    icon="sap-icon://expand-group"
                    press="handlerTreeExpandSelection" />
                <Button icon="sap-icon://collapse-all"
                    ariaLabelledBy="{i18n>treeTable.btnCollapseAll}"
                    press="handlerTreeCollapseAll" />
                <ToolbarSeparator />
                <Button
                    tooltip="{i18n>treeTable.btnCollapseSelection}"
                    icon="sap-icon://collapse-group"
                    press="handlerTreeCollapseSelection" />
                <Button icon="sap-icon://action-settings" press="handlerTablePersonalization" />
            </OverflowToolbar>
        </tree:extension>
        <tree:layoutData>
            <FlexItemData growFactor="1" />
        </tree:layoutData>

    </tree:TreeTable>

</core:FragmentDefinition>